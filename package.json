{
  "name": "easy-dock-root",
  "private": true,
  "scripts": {
    "start": "lerna run start",
    "build": "lerna run build",
    "precommit": "lint-staged",
    "bootstrap": "lerna bootstrap",
    "publish": "lerna publish",
    "clean": "lerna clean"
  },
  "devDependencies": {
    "@commitlint/cli": "12.1.1",
    "@commitlint/config-conventional": "12.1.1",
    "husky": "4.3.8",
    "lint-staged": "10.5.4"
  },
  "lint-staged": {
    "packages/**/*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint"
    ],
    "main/**/*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit"
    }
  },
  "workspaces": [
    "packages/core",
    "main"
  ],
  "engines": {
    "node": ">= 10.0"
  }
}
