{
  "name": "easy-dock-root",
  "private": true,
  "scripts": {
    "start": "lerna run start",
    "start:flow": "lerna run start --scope=easy-flow-front --stream",
    "start:chart": "lerna run start --scope=easy-chart-front",
    "build": "lerna bootstrap && lerna run build",
    "build:dev": "lerna bootstrap && lerna run build:dev",
    "precommit": "lint-staged",
    "bootstrap": "yarn add husky --dev -W && husky install && lerna bootstrap",
    "publish": "lerna publish",
    "clean": "lerna clean",
    "eslint": "eslint apps/*/src --ext .js,.jsx,.ts,.tsx"
  },
  "dependencies": {
    "lerna": "^4.0.0",
    "typescript": "^4.2.4",
    "yarn": "1.22.10",
    "mockjs": "1.1.0",
    "filemanager-webpack-plugin": "^4.0.0",
    "create-react-app": "^4.0.3"
  },
  "devDependencies": {
    "@commitlint/cli": "12.1.1",
    "@commitlint/config-conventional": "12.1.1",
    "@types/mockjs": "1.0.3",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "4.22.1",
    "@typescript-eslint/typescript-estree": "4.33.0",
    "babel-eslint": "10.1.0",
    "eslint": "7.25.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-config-react-app": "6.0.0",
    "eslint-plugin-import": "^2.23.2",
    "eslint-plugin-react": "7.23.2",
    "eslint-plugin-react-hooks": "4.2.0",
    "husky": "^7.0.4",
    "lint-staged": "10.5.4",
    "mockjs": "1.1.0",
    "prettier": "2.2.1"
  },
  "lint-staged": {
    "packages/*/src/**/*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint -c=.eslintrc --fix"
    ],
    "apps/*/src/**/*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint -c=.eslintrc --fix"
    ]
  },
  "workspaces": [
    "packages/core",
    "apps/*"
  ],
  "engines": {
    "node": ">= 12.0"
  }
}
