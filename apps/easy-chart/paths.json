{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@utils/*": ["src/utils/*"],
      "$app/*": ["src/app/*"],
      "@components": ["src/components"],
      "@components/*": ["src/components/*"],
      "@consts": ["src/consts"],
      "@consts/*": ["src/consts/*"],
      "@routes": ["src/routes"],
      "@routes/*": ["src/routes/*"],
      "@schema": ["src/schema"],
      "@schema/*": ["src/schema/*"],
      "@styles/*": ["src/styles/*"],
      "@hooks/*": ["src/hooks/*"],
      "@common/*": ["../../packages/common/*"]
    }
  }
}
